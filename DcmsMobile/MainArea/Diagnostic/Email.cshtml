@model DcmsMobile.MainArea.Diagnostic.DiagnosticEmailModel
@{
    ViewBag.Title = "Email";
    Layout = @MVC_DcmsMobile.SharedViews.Views._layoutBootstrap;
}


<div class="container">
    <div class="page-header">
        <h1>Send Test Email</h1>
    </div>
    <dl class="dl-horizontal">
        <dt>@Html.LabelFor(m => m.From)</dt>
        <dd>@Html.DisplayFor(m => m.From)</dd>
        <dt>
            @Html.LabelFor(m => m.HostName)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.HostName)
        </dd>
    </dl>

    @using (Html.BeginForm(@MVC_DcmsMobile.Diagnostic.SendEmail(), FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form"
}))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.To, new
       {
           @class = "col-sm-2 control-label"
       })
            <div class="col-sm-10">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.To, new
       {
           type = "email",
           @class = "form-control",
           placeholder = "xyz@xyx.com"
       })
                    <span class="input-group-addon">*</span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new
       {
           @class = "col-sm-2 control-label"
       })
            <div class="col-sm-10">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Subject, new
       {
           @class = "form-control",
           size = 40
       })
                    <span class="input-group-addon">*</span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Body, new
       {
           @class = "col-sm-2 control-label"
       })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Body, new
       {
           @class = "form-control",
           rows = 10,
           cols = 40
       })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Send Email</button>
            </div>
        </div>
    }
</div>


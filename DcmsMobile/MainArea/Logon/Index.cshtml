@model DcmsMobile.MainArea.Logon.LogonModel
@{
    ViewBag.Title = "DCMS Connect Login";
    Layout = Layout = @MVC_DcmsMobile.SharedViews.Views._layoutBootstrap;
}

<div class="page-header" style="text-align:center">
    <h3><span class="glyphicon glyphicon-lock"></span> @ViewBag.Title</h3>
</div>
<div class="container">
    @using (Html.BeginForm(MVC_DcmsMobile.Logon.Login(), FormMethod.Post, new
    {
        @class = "form-horizontal",
        role = "form"
    }))
    {
        @Html.HiddenFor(m => m.ReturnUrl)
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new
   {
       @class = "col-sm-2 control-label"
   })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.UserName, new
       {
           @class = "form-control",
           placeholder = "User name"
       })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new
   {
       @class = "col-sm-2 control-label"
   })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.Password, new
       {
           @class = "form-control",
           placeholder = "Password"
       })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-1">
                <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-log-in"></span> Sign in</button>
            </div>
            <div class="col-sm-1">
                <a class="btn"  href="@Url.Content("~")">
                Skip</a>
            </div>
        </div>
    }
</div>





                        <td style="text-align: right">@Html.DisplayFor(m => m.AllPallets[j].TotalBoxes)</td>
                        <td>@Html.DisplayFor(m => m.AllPallets[j].CustomerName)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>*@
    }
</div>

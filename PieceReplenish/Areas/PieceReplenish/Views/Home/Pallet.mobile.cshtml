@using DcmsMobile.PieceReplenish.ViewModels
@model PalletViewModel
@{
    ViewBag.Title = "Scan Pallet";
}
@using (Html.BeginForm(MVC_PieceReplenish.PieceReplenish.Home.AcceptPallet(), FormMethod.Get))
{
    @Html.ValidationSummary()
    <span style="font-size: 0.8em">@Html.StatusSummary()
    </span>
    @:Pallet @Html.TextBoxFor(m => m.PalletId, new { id = "scan", style = "text-transform: uppercase" })
    <span>
        @Html.DisplayFor(m => m.Context.BuildingId) </span>
    <input type="hidden" name="@Html.NameFor(m => m.Context.Serialized)" value='@Model.Context.Serialized' />
    <div>
        Area <strong>@Html.DisplayFor(m => m.Context.CartonAreaId)</strong>
        Restock area <strong>@Html.DisplayFor(m => m.Context.RestockAreaId)</strong>
    </div>
}
<script src="@Links_PieceReplenish.Areas.PieceReplenish.Scripts.PieceReplenish_js" type="text/javascript"></script>

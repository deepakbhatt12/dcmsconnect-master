@model DcmsMobile.PieceReplenish.ViewModels.Restock.UpcViewModel
@{
    ViewBag.Title = "Carton " + @Model.CartonId + " VWH " + @Model.VwhId;
}
@using (Html.BeginForm(MVC_PieceReplenish.PieceReplenish.Restock.HandleUpc(), FormMethod.Post
))
{
    @Html.ValidationSummary()
    @Html.StatusSummary()
    <label>
        UPC/Carton</label>
    <input type="text" id = "scan" style = "text-transform: uppercase" name="@MVC_PieceReplenish.PieceReplenish.Restock.HandleUpcParams.upcCode" />
    <input type="hidden" name="@MVC_PieceReplenish.PieceReplenish.Restock.HandleUpcParams.cartonId" value="@Model.CartonId"/> 
    if (!string.IsNullOrWhiteSpace(Model.LastUpcCode))
    { 
    <input type="hidden" name="@MVC_PieceReplenish.PieceReplenish.Restock.HandleUpcParams.lastUpcCode" value="@Model.LastUpcCode"/> 
    }
    <div>
        <strong>@Model.Pieces</strong> Pcs of <strong>@Model.SkuDisplayName (@Html.DisplayFor(m => m.SkuRetailPrice))</strong>
    </div>
}
@Html.Partial(MVC_PieceReplenish.PieceReplenish.Restock.Views._locationSuggestionsPartial, Model.SuggestedLocations)
<span class="ui-state-active">Enter to Go Back. 
</span>
@section scripts {
    <script src="@Links_PieceReplenish.Areas.PieceReplenish.Scripts.PieceReplenish_js" type="text/javascript"></script>
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <link href="@Links_REQ2.Areas.REQ2.Home.REQ2_all_css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    @*<link href="@Links_REQ2.Content.themes.Start1_10_0.jquery_ui_css" rel="stylesheet" type="text/css" />*@
</head>
<body>
    <div id="outer">
        <div id="header">
            <h1>
                @ViewBag.Title</h1>
            <h2>
                @ViewBag.Subtitle</h2>
        </div>
        <div id="menu">
            <ul>
                <li class="banner"><span>DCMS Connect - REQ2</span></li>
                <li><a href="@Url.Content("~")" >DCMS Connect Home</a></li>
                @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                {
                    <li style="color: white">@REQ2Resource.Welcome @ViewContext.HttpContext.User.Identity.Name</li>
                }
@* ReSharper disable Html.PathError *@
                @if (ViewContext.HttpContext.Trace.IsEnabled)
                {
                    <li><a href="@Url.Content("~/trace.axd")" target="trace" >Trace</a> </li>
                }
                <li><a href="@Url.Action(MVC_REQ2.REQ2.Home.Tutorial())">Tutorial</a></li>
                @* ReSharper restore Html.PathError *@
            </ul>
        </div>
        <div id="content">
            <div id="primaryContentContainer">
                <div id="primaryContent">
                    @Html.StatusSummary()
                    @RenderBody()
                </div>
            </div>
            <div id="secondaryContent">
                @RenderSection("sidebar", false)
            </div>
            <div class="ui-helper-clearfix">
            </div>
        </div>
        <div id="footer">
            <p>
                Copyright &copy; 2011 Eclipse Systems <a href="http://www.eclsys.com" target="_blank">
                    http://www.eclsys.com</a></p>
        </div>
    </div>
    @*@if (ViewContext.HttpContext.Request.Browser.Browser.Trim().ToUpperInvariant() == "IE" && ViewContext.HttpContext.Request.Browser.MajorVersion <= 8)
    {
        <script src="@Links_REQ2.Scripts.jquery_1_8_2_js" type="text/javascript"></script>
    }
    else
    {
        <script src="@Links_REQ2.Scripts.jquery_2_0_3_js" type="text/javascript"></script>
    }*@
    <script src="@Links_REQ2.Scripts.jquery_2_2_0_js" type="text/javascript"></script>
    <script>$.uiBackCompat = false;</script>
    <script src="@Links_REQ2.Scripts.jquery_2_2_0_js" type="text/javascript"></script>
    <script src="@Links_REQ2.Scripts.jquery_validate_js" type="text/javascript"></script>
    <script src="@Links_REQ2.Scripts.jquery_validate_unobtrusive_js" type="text/javascript"></script>
    @RenderSection("scripts", false)
</body>
</html>

@model DcmsMobile.Receiving.Areas.Receiving.Rad.AddSpotCheckViewModel
@{

    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}
<form action="@Url.Action(MVC_Receiving.Receiving.Rad.AddUpdateSpotCheckSetting())" method="post" class="spotcheckEditor">
    <div class="modal-body">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <label for="ddlSewingPlant">Sewing Plant</label>
            <select class="form-control" id="ddlSewingPlant" name="@MVC_Receiving.Receiving.Rad.AddUpdateSpotCheckSettingParams.sewingPlantId">
                <option value="">(All)</option>
                @foreach (var item in Model.SewingPlantList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>

        </div>
        <div class="form-group">
            <label>Style</label>
            <div class="input-group" data-url="@Url.Action(MVC_Receiving.Receiving.Rad.StyleAutocomplete("~"))">
                <span class="input-group-addon">
                    <input type="checkbox">
                </span>
                <input type="text" class="form-control typeahead" disabled="disabled" autocomplete="off" placeholder="All Styles" name="typeaheadStyle" data-val="true" />
                <!-- The hidden field must be immediately after the input, it is styled as display = "none
                    so that the hidden field can show validation error, as type = "hidden" doesnot work for
                    validation error message using bootstrap-->
                <input type="text" style="display:none" name="@MVC_Receiving.Receiving.Rad.AddUpdateSpotCheckSettingParams.style" />
                <span class="input-group-btn">
                    <span class="btn btn-default"><span class="glyphicon glyphicon-search"></span></span>
                </span>

            </div>

            @Html.ValidationMessage("typeaheadStyle", new
           {
               @class = "help-block"
           })
        </div>


        <div class="form-group">
            <label>Color</label>
            <div class="input-group" data-url="@Url.Action(MVC_Receiving.Receiving.Rad.ColorAutocomplete("~"))">
                <span class="input-group-addon">
                    <input type="checkbox">
                </span>
                <input type="text" class="form-control typeahead" disabled="disabled" autocomplete="off" placeholder="All Colors" name="typeaheadColor" data-val="true" id="Sharad" />
                <!-- The hidden field must be immediately after the input, it is styled as display = "none
                   so that the hidden field can show validation error, as type = "hidden" doesnot work for
                   validation error message using bootstrap-->
                <input type="text" style="display:none" name="@MVC_Receiving.Receiving.Rad.AddUpdateSpotCheckSettingParams.color" />
                <span class="input-group-btn">
                    <span class="btn btn-default"><span class="glyphicon glyphicon-search"></span></span>
                </span>
            </div>
            @Html.ValidationMessage("typeaheadColor", new
           {
               @class = "help-block"
           })
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="@MVC_Receiving.Receiving.Rad.AddUpdateSpotCheckSettingParams.enabled" value="true" checked="checked" id="cbIsSpotCheckEnable" />
                SpotCheck Enabled
            </label>
        </div>
        <div class="form-group">
            <label for="tbSpotCheckPercent">Spot Check Percent <sup><span class="glyphicon glyphicon-asterisk"></span></sup></label>
            <input type="number" id="tbSpotCheckPercent" class="form-control" required name="@MVC_Receiving.Receiving.Rad.AddUpdateSpotCheckSettingParams.spotCheckPercent"
                   data-val="true" data-val-required="Please specify a percentage" min="0" max="100" />
            @Html.ValidationMessage(MVC_Receiving.Receiving.Rad.AddUpdateSpotCheckSettingParams.spotCheckPercent, new
           {
               @class = "help-block"
           })
        </div>


        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" name="@MVC_Receiving.Receiving.Rad.AddUpdateSpotCheckSettingParams.action"
                    value="@DcmsMobile.Receiving.Areas.Receiving.Rad.ModifyAction.Add">
                Add
            </button>
        </div>

    </div>



</form>








